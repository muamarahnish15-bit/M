<!DOCTYPE html>
<html lang="ar">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Mayas Valentine ðŸ’–</title>
<style>
body {
    margin: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-family: Arial, sans-serif;
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
    overflow: hidden;
    text-align: center;
}

h1 {
    font-size: 2rem;
    color: white;
}

img {
    width: 250px;
    margin: 20px 0;
    border-radius: 15px;
}

.buttons {
    position: relative;
    width: 300px;
    height: 150px;
}

button {
    padding: 12px 25px;
    font-size: 18px;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    position: absolute;
    transition: 0.3s;
}

#yesBtn {
    background-color: #ff4d6d;
    color: white;
    left: 50px;
    top: 50px;
}

#yesBtn:hover {
    transform: scale(1.1);
}

#noBtn {
    background-color: #555;
    color: white;
    left: 180px;
    top: 50px;
}

/* Confetti / Hearts */
.falling {
    position: fixed;
    width: 15px;
    height: 15px;
    top: -20px;
    border-radius: 50%;
    pointer-events: none;
    animation: fall 3s linear forwards;
}

.heart {
    width: 20px;
    height: 20px;
    background: red;
    clip-path: polygon(50% 0%, 61% 13%, 75% 13%, 88% 25%, 100% 44%, 50% 100%, 0 44%, 12% 25%, 25% 13%, 39% 13%);
}

@keyframes fall {
    to {
        transform: translateY(100vh) rotate(360deg);
        opacity: 0;
    }
}
</style>
</head>
<body>

<h1 id="question">Mayas, will you be my Valentine? ðŸ’˜</h1>

<img id="gif" src="https://media.giphy.com/media/MDJ9IbxxvDUQM/giphy.gif">

<div class="buttons">
    <button id="yesBtn">Yes ðŸ’–</button>
    <button id="noBtn">No ðŸ˜¢</button>
</div>

<!-- ðŸŽµ Romantic Music -->
<audio id="bgMusic" loop>
    <source src="https://www.bensound.com/bensound-music/bensound-romantic.mp3" type="audio/mp3">
</audio>

<script>
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const gif = document.getElementById("gif");
const question = document.getElementById("question");
const music = document.getElementById("bgMusic");

// ðŸŽµ ØªØ´ØºÙŠÙ„ Ø§Ù„Ù…ÙˆØ³ÙŠÙ‚Ù‰ Ø¨Ø¹Ø¯ Ø£ÙˆÙ„ Ù†Ù‚Ø±Ø© ÙÙ‚Ø· (Ù„ØªÙˆØ§ÙÙ‚ iOS)
document.body.addEventListener("click", () => {
    music.play().catch(() => {});
}, {once: true}); // Ù…Ø±Ø© ÙˆØ§Ø­Ø¯Ø© ÙÙ‚Ø·

// ØªØ­Ø±ÙŠÙƒ Ø²Ø± No Ø¹Ù†Ø¯ Ø§Ù„Ù…Ø±ÙˆØ± Ø¨Ø§Ù„Ù…Ø§ÙˆØ³ / Ù„Ù…Ø³
noBtn.addEventListener("mouseover", () => {
    const x = Math.random() * 250;
    const y = Math.random() * 120;
    noBtn.style.left = x + "px";
    noBtn.style.top = y + "px";
});

// Ø¹Ù†Ø¯ Ø§Ù„Ø¶ØºØ· Ø¹Ù„Ù‰ NoØŒ ÙŠÙƒØ¨Ø± Ø²Ø± Yes ØªØ¯Ø±ÙŠØ¬ÙŠØ§Ù‹
noBtn.addEventListener("click", (e) => {
    e.preventDefault();
    let currentScale = parseFloat(yesBtn.style.transform.replace(/[^0-9.]/g, '')) || 1;
    currentScale += 0.1;
    yesBtn.style.transform = `scale(${currentScale})`;
    if (currentScale >= 2.5) {
        noBtn.style.display = "none";
    }
});

// Ø¹Ù†Ø¯ Ø§Ù„Ø¶ØºØ· Ø¹Ù„Ù‰ YesØŒ ØªØºÙŠØ± GIF ÙˆÙŠØ¸Ù‡Ø± confetti ÙˆÙ‚Ù„ÙˆØ¨
yesBtn.addEventListener("click", () => {
    gif.src = "https://media.giphy.com/media/111ebonMs90YLu/giphy.gif";
    question.innerHTML = "YAYYYYY!!! ðŸ’• I love you Mayas!";
    yesBtn.style.display = "none";
    noBtn.style.display = "none";
    music.volume = 1;
    launchConfettiAndHearts();
});

function launchConfettiAndHearts() {
    for (let i = 0; i < 80; i++) {
        const confetti = document.createElement("div");
        confetti.classList.add("falling");
        confetti.style.left = Math.random() * window.innerWidth + "px";
        confetti.style.background = `hsl(${Math.random()*360}, 100%, 50%)`;
        confetti.style.animationDuration = (Math.random() * 3 + 2) + "s";
        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 5000);
    }
    for (let i = 0; i < 40; i++) {
        const heart = document.createElement("div");
        heart.classList.add("falling", "heart");
        heart.style.left = Math.random() * window.innerWidth + "px";
        heart.style.animationDuration = (Math.random() * 3 + 2) + "s";
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 5000);
    }
}
</script>

</body>
</html>
